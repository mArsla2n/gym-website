@{
    ViewData["Title"] = "Home Page";
}

<section id="home" class="hero">
    <div class="container">
        <h2>Welcome to Gym Advance</h2>
        <p>Your journey to fitness starts here</p>
        <a href="#services" class="btn">Explore Services</a>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services">
    <div class="container">
        <h2>Our Services</h2>
        <div class="service-item">
            <h3>Personal Training</h3>
            <p>Get personalized training programs and guidance from our expert trainers.</p>
        </div>
        <div class="service-item">
            <h3>Group Classes</h3>
            <p>Join our group classes for a fun and engaging workout experience.</p>
        </div>
        <div class="service-item">
            <h3>Nutrition Plans</h3>
            <p>Receive customized nutrition plans to complement your fitness goals.</p>
        </div>
    </div>
</section>


<div class="banner">
    <h1>Get Fit, Stay Healthy</h1>
</div>
<section class="services" id="services">
    <div class="service">
        <img src="~/images/weightlifting.jpg.png" />
        <h3>Weightlifting</h3>
        <p>Build strength with our top-of-the-line weightlifting equipment and expert trainers.</p>
    </div>
    <div class="service">
        <img src="~/images/cardio.jpg.png" />
        <h3>Cardio</h3>
        <p>Improve your endurance with our modern cardio machines and group classes.</p>
    </div>
    <div class="service">
        <img src="~/images/yoga.jpg.png" />
        <h3>Yoga</h3>
        <p>Enhance your flexibility and peace of mind with our yoga sessions.</p>
    </div>
</section>
<!-- Contact Section -->
<section id="contact" class="contact">
    <div class="container">
        <h2>Contact Us</h2>
        <form action="#">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" required></textarea>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</section>
